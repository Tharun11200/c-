#include<iostream>
using namespace std;
class reverse
{
	int n,r,num;
	public:
		void getdata();
		void reversenum();
};
void reverse::getdata()
{
	cout<<"enter the number";
	cin>>n;
	cout<<"enter the second number";
	cin>>r;
	
}
void reverse::reversenum()
{
	cout<<n<<" ";
	cout<<r<<" ";
}
int main() {
  int n, reverse = 0, remainder;
  while (n != 0) {
    remainder = n % 10;
    reverse = reverse * 10 + remainder;
    n /= 10;
  }
  printf("Reversed number = %d", reverse);

  return 0;
}

